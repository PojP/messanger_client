<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cl.client.SceneController.UserPass.RegistrationController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="220.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="220.0">
                     <children>
                        <TextField fx:id="NickNameField" onInputMethodTextChanged="#OnNicknameClicked" onMouseClicked="#OnNicknameClicked" prefHeight="22.0" prefWidth="233.0" promptText="Nickname" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="220.0">
                     <children>
                        <TextField fx:id="LoginField" onInputMethodTextChanged="#OnLoginClicked" onMouseClicked="#OnLoginClicked" prefHeight="22.0" prefWidth="281.0" promptText="Login" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="220.0">
                     <children>
                        <PasswordField fx:id="PasswordFirstField" onInputMethodTextChanged="#OnPasswordClicked" onMouseClicked="#OnPasswordClicked" prefHeight="22.0" prefWidth="269.0" promptText="Password" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="53.0" prefWidth="220.0">
                     <children>
                        <PasswordField fx:id="PasswordSecondField" prefHeight="22.0" prefWidth="255.0" promptText="Repeat Password" />
                     </children>
                  </HBox>
                  <Label fx:id="BadText" alignment="CENTER" prefHeight="43.0" prefWidth="241.0" text="Bad Data" textAlignment="CENTER" textFill="#ff5353" visible="false" />
                  <HBox alignment="CENTER" prefHeight="47.0" prefWidth="220.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#CancelButton" text="Cancel" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#EnterButton" style="-fx-background-color: #adcfe6;" text="Enter" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER_LEFT" prefHeight="59.0" prefWidth="600.0">
               <children>
                  <Label fx:id="InfoText" prefHeight="30.0" prefWidth="616.0" text="Label" textAlignment="CENTER" visible="false" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
